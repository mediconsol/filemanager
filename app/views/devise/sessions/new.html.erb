<% content_for :title, "로그인 - 병원경영분석시스템" %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow">
      <div class="card-header text-center bg-primary text-white">
        <h4 class="mb-0">
          <i class="fas fa-hospital me-2"></i>
          병원경영분석시스템
        </h4>
        <p class="mb-0 mt-2">로그인</p>
      </div>

      <div class="card-body p-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, class: "needs-validation", novalidate: true, data: { turbo: false }) do |f| %>
          <div class="mb-3">
            <%= f.label :email, "이메일", class: "form-label" %>
            <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "form-control",
                placeholder: "이메일을 입력하세요",
                required: true %>
            <div class="invalid-feedback">
              올바른 이메일을 입력해주세요.
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :password, "비밀번호", class: "form-label" %>
            <%= f.password_field :password,
                autocomplete: "current-password",
                class: "form-control",
                placeholder: "비밀번호를 입력하세요",
                required: true %>
            <div class="invalid-feedback">
              비밀번호를 입력해주세요.
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-3 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "로그인 상태 유지", class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid">
            <%= f.submit "로그인", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>

        <!-- 테스트 계정 정보 -->
        <div class="mt-4 p-3 bg-light rounded">
          <h6 class="text-muted mb-2">테스트 계정</h6>
          <small class="text-muted">
            <strong>관리자:</strong> admin@hospital.com / password123<br>
            <strong>분석가:</strong> analyst@hospital.com / password123<br>
            <strong>뷰어:</strong> viewer@hospital.com / password123
          </small>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();

// Check if user is already logged in and redirect
if (window.location.pathname === '/users/sign_in' && document.body.innerHTML.includes('환영합니다')) {
  window.location.href = '/';
}
</script>
