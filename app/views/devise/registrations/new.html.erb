<% content_for :title, "회원가입 - 병원경영분석시스템" %>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow">
      <div class="card-header text-center bg-primary text-white">
        <h4 class="mb-0">
          <i class="fas fa-user-plus me-2"></i>
          회원가입
        </h4>
        <p class="mb-0 mt-2">병원경영분석시스템</p>
      </div>

      <div class="card-body p-4">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, class: "needs-validation", novalidate: true, data: { turbo: false }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :name, "이름", class: "form-label" %>
              <%= f.text_field :name,
                  class: "form-control",
                  placeholder: "이름을 입력하세요",
                  required: true %>
              <div class="invalid-feedback">
                이름을 입력해주세요.
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :email, "이메일", class: "form-label" %>
              <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  class: "form-control",
                  placeholder: "이메일을 입력하세요",
                  required: true %>
              <div class="invalid-feedback">
                올바른 이메일을 입력해주세요.
              </div>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :hospital_id, "병원", class: "form-label" %>
            <%= f.collection_select :hospital_id,
                Hospital.active.order(:name),
                :id, :name,
                { prompt: "병원을 선택하세요" },
                { class: "form-select", required: true } %>
            <div class="invalid-feedback">
              병원을 선택해주세요.
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :department, "부서", class: "form-label" %>
              <%= f.text_field :department,
                  class: "form-control",
                  placeholder: "부서명을 입력하세요" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :position, "직책", class: "form-label" %>
              <%= f.text_field :position,
                  class: "form-control",
                  placeholder: "직책을 입력하세요" %>
            </div>
          </div>

          <div class="mb-3">
            <%= f.label :phone, "전화번호", class: "form-label" %>
            <%= f.telephone_field :phone,
                class: "form-control",
                placeholder: "전화번호를 입력하세요" %>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= f.label :password, "비밀번호", class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="text-muted">(최소 <%= @minimum_password_length %>자)</small>
              <% end %>
              <%= f.password_field :password,
                  autocomplete: "new-password",
                  class: "form-control",
                  placeholder: "비밀번호를 입력하세요",
                  required: true %>
              <div class="invalid-feedback">
                비밀번호를 입력해주세요.
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <%= f.label :password_confirmation, "비밀번호 확인", class: "form-label" %>
              <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  class: "form-control",
                  placeholder: "비밀번호를 다시 입력하세요",
                  required: true %>
              <div class="invalid-feedback">
                비밀번호 확인을 입력해주세요.
              </div>
            </div>
          </div>

          <div class="d-grid">
            <%= f.submit "회원가입", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>
